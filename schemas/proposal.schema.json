{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gateforge.dev/schemas/proposal.schema.json",
  "title": "GateForge Proposal v0",
  "type": "object",
  "required": [
    "schema_version",
    "proposal_id",
    "timestamp_utc",
    "author_type",
    "backend",
    "model_script",
    "change_summary",
    "requested_actions",
    "risk_level"
  ],
  "additionalProperties": true,
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "0.1.0"
    },
    "proposal_id": {
      "type": "string",
      "minLength": 1
    },
    "timestamp_utc": {
      "type": "string",
      "minLength": 1
    },
    "author_type": {
      "type": "string",
      "enum": ["human", "agent"]
    },
    "backend": {
      "type": "string",
      "enum": ["mock", "openmodelica", "openmodelica_docker", "fmu_runner"]
    },
    "model_script": {
      "type": "string",
      "minLength": 1
    },
    "change_summary": {
      "type": "string",
      "minLength": 1
    },
    "requested_actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": ["check", "simulate", "regress", "benchmark"]
      }
    },
    "risk_level": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    },
    "change_set_path": {
      "type": "string",
      "minLength": 1
    },
    "checkers": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["timeout", "nan_inf", "performance_regression", "event_explosion"]
      }
    },
    "metadata": {
      "type": "object"
    }
  }
}
