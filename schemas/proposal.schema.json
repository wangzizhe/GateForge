{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gateforge.dev/schemas/proposal.schema.json",
  "title": "GateForge Proposal v0",
  "type": "object",
  "required": [
    "schema_version",
    "proposal_id",
    "timestamp_utc",
    "author_type",
    "backend",
    "model_script",
    "change_summary",
    "requested_actions",
    "risk_level"
  ],
  "additionalProperties": true,
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "0.1.0"
    },
    "proposal_id": {
      "type": "string",
      "minLength": 1
    },
    "timestamp_utc": {
      "type": "string",
      "minLength": 1
    },
    "author_type": {
      "type": "string",
      "enum": ["human", "agent"]
    },
    "backend": {
      "type": "string",
      "enum": ["mock", "openmodelica", "openmodelica_docker", "fmu_runner"]
    },
    "model_script": {
      "type": "string",
      "minLength": 1
    },
    "change_summary": {
      "type": "string",
      "minLength": 1
    },
    "requested_actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": ["check", "simulate", "regress", "benchmark"]
      }
    },
    "risk_level": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    },
    "change_set_path": {
      "type": "string",
      "minLength": 1
    },
    "checkers": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "timeout",
          "nan_inf",
          "performance_regression",
          "event_explosion",
          "steady_state_regression",
          "control_behavior_regression",
          "invariant_guard"
        ]
      }
    },
    "checker_config": {
      "type": "object",
      "properties": {
        "performance_regression": {
          "type": "object",
          "properties": {
            "max_ratio": {
              "type": "number",
              "exclusiveMinimum": 0
            }
          }
        },
        "event_explosion": {
          "type": "object",
          "properties": {
            "max_ratio": {
              "type": "number",
              "exclusiveMinimum": 0
            },
            "abs_threshold_if_baseline_zero": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "steady_state_regression": {
          "type": "object",
          "properties": {
            "max_abs_delta": {
              "type": "number",
              "exclusiveMinimum": 0
            }
          }
        },
        "control_behavior_regression": {
          "type": "object",
          "properties": {
            "max_overshoot_abs_delta": {
              "type": "number",
              "exclusiveMinimum": 0
            },
            "max_settling_time_ratio": {
              "type": "number",
              "exclusiveMinimum": 0
            },
            "max_steady_state_abs_delta": {
              "type": "number",
              "exclusiveMinimum": 0
            }
          }
        },
        "invariant_guard": {
          "type": "object",
          "properties": {
            "invariants": {
              "type": "array",
              "items": { "type": "object" }
            }
          }
        },
        "_runtime": {
          "type": "object",
          "properties": {
            "enable": {
              "type": "array",
              "items": { "type": "string" }
            },
            "disable": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "physical_invariants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "metric"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["range", "monotonic", "bounded_delta"]
          },
          "metric": {
            "type": "string",
            "minLength": 1
          },
          "min": { "type": "number" },
          "max": { "type": "number" },
          "direction": {
            "type": "string",
            "enum": ["non_increasing", "non_decreasing"]
          },
          "max_abs_delta": {
            "type": "number",
            "exclusiveMinimum": 0
          }
        }
      }
    },
    "metadata": {
      "type": "object"
    }
  }
}
