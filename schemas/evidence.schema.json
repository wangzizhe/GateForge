{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GateForge Evidence Schema v0.1.0",
  "type": "object",
  "required": [
    "schema_version",
    "run_id",
    "timestamp_utc",
    "backend",
    "toolchain",
    "status",
    "failure_type",
    "metrics",
    "artifacts",
    "model_script",
    "exit_code",
    "check_ok",
    "simulate_ok",
    "gate"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "proposal_id": {
      "type": ["string", "null"]
    },
    "run_id": {
      "type": "string"
    },
    "timestamp_utc": {
      "type": "string"
    },
    "backend": {
      "type": "string",
      "enum": ["mock", "openmodelica", "openmodelica_docker"]
    },
    "toolchain": {
      "type": "object",
      "required": ["backend_name", "backend_version", "docker_image", "policy_profile", "policy_version"],
      "properties": {
        "backend_name": {
          "type": "string"
        },
        "backend_version": {
          "type": ["string", "null"]
        },
        "docker_image": {
          "type": ["string", "null"]
        },
        "policy_profile": {
          "type": ["string", "null"]
        },
        "policy_version": {
          "type": ["string", "null"]
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["success", "failed"]
    },
    "failure_type": {
      "type": "string"
    },
    "metrics": {
      "type": "object",
      "required": ["runtime_seconds", "events"],
      "properties": {
        "runtime_seconds": {
          "type": "number",
          "minimum": 0
        },
        "events": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "artifacts": {
      "type": "object",
      "required": ["log_excerpt"],
      "properties": {
        "log_excerpt": {
          "type": "string"
        }
      }
    },
    "model_script": {
      "type": ["string", "null"]
    },
    "exit_code": {
      "type": "integer"
    },
    "check_ok": {
      "type": "boolean"
    },
    "simulate_ok": {
      "type": "boolean"
    },
    "gate": {
      "type": "string",
      "enum": ["PASS", "FAIL", "NEEDS_REVIEW"]
    }
  }
}
